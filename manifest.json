{
  "manifest_version": 3,
  "name": "Hex Color Picker",
  "version": "1.0",
  "description": "Use this extension to pick a color from any page and automatically copy the hex code to your clipboard.",
  "permissions": ["scripting", "activeTab", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
